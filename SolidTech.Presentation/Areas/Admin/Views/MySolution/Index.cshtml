
@model List<SolutionDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <h1>MERHABA BURASI PROJELERİMİZİN OLDUĞU SAYFA</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Header</th>
                <th scope="col">Content</th>               
                <th scope="col"></th>
                <th scope="col">
                    <a href="@Url.RouteUrl("admin_default",new {controller="MyProject",action="AddNewProject"})" class="nav-link">
                        <i class="far fa-circle nav-icon"></i>
                        Add New Solution
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var solution in Model)
            {
                <tr>
                    <th scope="row">@solution.SolutionId</th>
                    <td>@solution.Header</td>
                    <td>@solution.Content</td>
                    <td>

                        <a href="@Url.RouteUrl("admin_default",new {controller="MyProject",action="GetMyProjectToEdit"})" class="btn btn-success">EDİT</a>

                    </td>
                    <td>
                        <a href="@Url.RouteUrl("admin_default",new {controller="MyProject",action="DeleteProjectByID",})" class="btn btn-danger">DELETE</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>

</div>