@using SolidTech.Business.Dtos

@model List<MessageDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    string messageType = ViewBag.MessageType;
}

<section class="content">
    <div class="row">
        <div class="col-md-3">
            <a href="compose.html" class="btn btn-primary btn-block mb-3">Compose</a>

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Folders</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item active">
                            <a href="?messageType=inbox" class="nav-link">
                                <i class="fas fa-inbox"></i> Inbox
                                <span class="badge bg-primary float-right">12</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="?messageType=sent" class="nav-link">
                                <i class="far fa-envelope"></i> Sent
                            </a>
                        </li>

                    </ul>
                </div>

            </div>

        </div>
  
        <div class="col-md-9">
            @await Component.InvokeAsync("MailPart", messageType)
        </div>
    </div>
</section>